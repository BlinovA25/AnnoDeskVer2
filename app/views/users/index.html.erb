
<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th>Login</th>
      <th>Fullname</th>
      <th>Birthday</th>
      <th>EÂ­mail</th>
      <th>Role</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.login %></td>
        <td><%= user.fullname %></td>
        <td><%= user.birthday %></td>
        <td><%= user.email %></td>
        <td><%= user.role.name %></td>
        <td><%= link_to 'Show', user %></td>
        <td>
          <% if can? :update, user %>
            <%= link_to 'Edit', edit_user_registration_path(user) %>
          <% end %>
        </td>
        <td>
          <% if can? :destroy, user %>
            <%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if can? :create, User %>
  <%= link_to 'New User', new_user_path %>
<% end %>